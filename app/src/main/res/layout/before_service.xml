<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrBeforeServiceInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgBeforeServiceInvoice"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:src="@drawable/no_image"
            android:padding="@dimen/_5sdp"
            app:civ_border_color="@color/btn_color"
            app:civ_border_width="2dp" />

        <com.xuber_for_services.app.Utils.ClanProTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Before Service"
            android:textColor="@color/btn_color"
            android:textSize="@dimen/_12ssp" />

        <com.xuber_for_services.app.Utils.ClanProTextView
            android:id="@+id/lblBeforeServiceInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/user_name"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>